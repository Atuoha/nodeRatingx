<form action="/admin/service/create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="" class="control-label">Name</label>
                <input type="text" name="name" class="form-control" placeholder="Service Name" required autofocus>
            </div>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                <label for="" class="control-label">Font Awesome</label>
                <input type="text" name="font" class="form-control" placeholder="Font Awesome | " required>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label">Content</label>
        <textarea name="content" id="" cols="5" rows="6" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Service</button>
    </div>
</form>
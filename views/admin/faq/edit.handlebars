<form action="/admin/faq/update/{{faq.id}}" method="post">
 <div class="row">
    <div class="col-md-6">
        <label for="" class="control-label">Question</label>
        <input type="text" name="question" value="{{faq.question}}" placeholder="Question" required autofocus >
    </div>


      <div class="col-md-6">
         <label for="" class="control-label">Tag</label>
        <input type="text" value="{{faq.tag}}" name="tag" placeholder="Tag" required  >
    </div>
 </div>

 <div class="form-group">
    <label for="" class="control-label">Answer</label>
      <textarea name="answer" id="" cols="5" rows="6" required placeholder="Answer">{{faq.answer}}</textarea>
 </div>

 <div class="form-group">
     <button type="submit" class="btn btn-success">Sumbit Edit</button>
 </div>
</form>
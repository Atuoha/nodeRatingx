

<form method="POST" action="/admin/appointment/create">
    
    <div class="row">
        <div class="col-md-4">
             <div class="form-group dates-wrap">
                <label class="control-label">Date</label>
                <input type="text" id="datepicker1" value="{{appointment.date}}" placeholder="Appointment Date" required class="form-control" name="date">
            </div>
        </div>


         <div class="col-md-4">
             <div class="form-group">
                <label class="control-label">Department</label>
                <select name="department" id="" value="{{appointment.department}}" class="form-control">
                  {{#select appointment.department}}  
                        {{#each depts}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                   {{/select}} 
                </select>
            </div>
        </div>


         <div class="col-md-4">
             <div class="form-group">
                <label class="control-label">Doctor</label>
                 <select name="doctor" id="" value="{{appointment.doctor}}" class="form-control">
                   {{#select appointment.doctor}}  
                        {{#each doctors}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                   {{/select}} 
                </select>
            </div>
        </div>
 
    </div>

    <div class="form-group">
        <label for="" class="control-label">Message</label>
        <textarea name="message" id="" placeholder="Enter Message" class="form-control" required cols="30" rows="5">{{appointment.message}}</textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Appointment</button>
    </div>

</form>





<!-- Activators -->
<script src="/admin/js/jquery.js"></script>
<script>
    $(document).ready(function(){
        $( "#datepicker1" ).datepicker();
        $('#timepicker1').timepicker();

    })
</script>
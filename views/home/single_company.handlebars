
<div class="jumbotron bg-secondary text-white text-center">
            <img src="/uploads/{{company.file}}" width="150" class=" img-thumbnail" alt="">
            <h1 ><strong>{{company.name}} <i class="fa fa-building-o" style="color:gold"></i></strong></h1>
        <p style="color:grey; font-size: 70%">Sector: {{company.sector}}</p>
</div>       
<div class="container">
<div class="m-5 mx-auto">
<div class="row">
    <div class="col-md-7">
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center">
                    <h1><b>5</b></h1>
                    <h4>Ratings</h4>

                    <p>Total ratings received</p>
                </div>
            </div>


             <div class="col-md-4">
                <div class="card text-center">
                    <h1><b>25</b></h1>
                    <h4>Total Stars</h4>

                    <p>Total stars received</p>
                </div>
            </div>



             <div class="col-md-4">
                <div class="card text-center">
                    <h1><b>5.5</b></h1>
                    <h4>Average Rating</h4>

                    <p>Based on five reviews</p>
                </div>
            </div>
        </div>

        <div class="reviews" style="margin-top: 10px;">
            <a class="btn btn-success btn-block" href="/user/company/rating/{{company.id}}">Rate Company <i class="fa fa-star" style="color: gold;"></i></a>

             <ol class="breadcrumb">
              <li><i class="fa fa-file-o"></i>Reviews (5)</li>
              <li><a href="" style="color:grey">Write Review <i class="fa fa-pencil"></i></a></li>
            </ol>

            <div class="written-reviews">

            </div>
        </div>

            
            

    </div>

    <div class="col-md-5 mt-2">
        <table class="table table-striped table-responsive">
            <tr>
                <th>Name</th>
                <td>{{company.name}}</td>
            </tr>

            <tr>
                <th><i class="fa fa-map-marker"></i></th>
                <td>{{company.address}}, {{company.city}}, {{company.country}}.</td>
            </tr>


            <tr>
                <th><i class="fa fa-building-o"></i></th>
                <td>{{company.sector}}</td>
            </tr>

            <tr>
                <th><i class="fa fa-external-link"></i></th>
                <td><a style="color:grey" href="{{company.website}}" target="_blank">{{company.website}}</a></td>
            </tr>

            {{#ifeq loggedUser.role 'Manager'}}
             <tr>
                <th><i class="fa fa-group"></i></th>
                <td><a class="btn btn-default" href="/user/company/employees_view/{{company.id}}">View Employees <i class="fa fa-group"></i></a></td>
            </tr>


             <tr>
                <th><i class="fa fa-user-plus"></i></th>
                <td><a class="btn btn-info" href="/user/company/employees_add/{{company.id}}">Add Employee <i class="fa fa-user-plus"></i></a></td>
            </tr>


            <tr>
            <th><i class="fa fa-pencil"></i></th>
            <td><a href="/user/company/edit/{{company.id}}" class="btn btn-warning">Edit <i class="fa fa-pencil"></i></a></td>
            </tr>
        
            <tr>
            <th><i class="fa fa-remove"></i></th>
            <td>
                <form action="/user/company/delete/{{company.id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete <i class="fa fa-remove"></i></button>

                </form>
            </td>
            </tr>
            {{/ifeq}}

        </table>
    </div>
</div>
</div>
   

</div>




<style>
    .card{
        min-height: 100px;
        border: 1px inset rgb(228, 227, 227);
        margin-top: 10px;
    }
</style>
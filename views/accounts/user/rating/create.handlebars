<div class="container">

<h3><i class="fa fa-star" style="color:#ffd700;"></i> <b>{{company.name}}</b></h3>


<form action="/user/company/rating/create" method="post">

    <div class="form-group">
        <label for="">Rating Count</label><br>
        <i class="fa fa-star fa-5x" ></i>
        <i class="fa fa-star fa-5x"></i>
        <i class="fa fa-star fa-5x"></i>
        <i class="fa fa-star fa-5x"></i>
        <i class="fa fa-star fa-5x"></i>

    <input type="hidden" class="form-control" name="rating" id="rating">
    <input type="hidden" value="{{company.id}}" class="form-control" name="company">

    <p id="rating-text"></p>
    </div>

    <div class="form-group">
        <label for="">Write Review</label>
        <textarea name="review" id="textearea" cols="30" class="form-control" rows="9"></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-send"></i> Submit now</button>
    </div>
</form>
</div>


<style>
    .fa-5x{
        color:rgb(214, 211, 211);
    }
</style>


<script src="/admin/jquery-2.2.4.min.js"></script>
<script>
    let ratings = 0;
    $('.fa-5x').mouseover(function(e){

        let color = $(this).css('color');
        if(color != 'rgb(255, 215, 0)'){
            $(this).css('color', 'gold')
            ratings += 1
        }else{
             $(this).css('color', 'rgb(214, 211, 211)')
             ratings -= 1
        }
        $('#rating').attr('value', ratings)
        $('#rating-text').html(`<b>${ratings}.0 Rating</b>` )

    })
</script>
  <div class="row">
          <div class="col-md-6 portlets">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h2><strong>Data Chart</strong></h2>
                <div class="panel-actions">
                  <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                  <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                </div>

              </div>
              <div class="panel-body">

               {{!-- Chart here --}}
                 <canvas id="myChart" ></canvas>  
               
              </div>
            </div>

          </div>

          <div class="col-md-6 portlets">
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="pull-left">Book Appointment</div>
                <div class="widget-icons pull-right">
                  <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                  <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                </div>
                <div class="clearfix"></div>
              </div>
              <div class="panel-body">
                <div class="padd">

                  <div class="form quick-post">
                  
                    <form method="POST" action="/admin/appointment/create">
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group dates-wrap">
                                    <label class="control-label">Date</label>
                                    <input type="text" id="datepicker1" placeholder="Appointment Date" required class="form-control" name="date">
                                </div>
                            </div>


                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Department</label>
                                    <select name="department" id="" class="form-control">
                                        {{#each depts}}
                                            <option value="{{id}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Doctor</label>
                                    <select name="doctor" id="" class="form-control">
                                        {{#each doctors}}
                                            <option value="{{id}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                    
                        </div>

                        <div class="form-group">
                            <label for="" class="control-label">Message</label>
                            <textarea name="message" id="" placeholder="Enter Message" class="form-control" required cols="30" rows="5"></textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Book Appointment</button>
                        </div>

                    </form>

                  </div>


                </div>
                <div class="widget-foot">
                  <!-- Footer goes here -->
                </div>
              </div>
            </div>

          </div>

        </div>



        


<!-- Activators -->
<script src="/admin/js/jquery.js"></script>
<script>
    $(document).ready(function(){
        $( "#datepicker1" ).datepicker();
        $('#timepicker1').timepicker();

    })
</script>




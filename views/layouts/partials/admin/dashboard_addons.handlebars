            data: [ {{appointCount}}, {{userCount}} , {{patientCount}} , {{researchCount}},  {{doctorCount}}, {{deptCount}}, {{serviceCount}}, {{contactCount}}, {{faqCount}}, {{testimonyCount}}, {{mediaCount}} ],
            backgroundColor: [
